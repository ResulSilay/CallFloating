<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
                                        app:cardBackgroundColor="@color/cardColor"
                                        app:cardCornerRadius="25dp"
                                        app:cardElevation="3dp" android:layout_margin="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="15dp">
            <TextView
                    android:id="@+id/txt_person_name"
                    android:text="..."
                    android:gravity="center"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textColor="@android:color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>